{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve-vue-app",
      "type": "shell",
      "command": "yarn serve",
      "options": {
        "cwd": "${workspaceFolder}/guards-lazyloading"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "(App running at:|ready in|Compiled successfully)"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    }
  ]
}
